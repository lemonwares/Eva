# ===========================================
# Eva - Event Vendor Application
# Environment Variables Example
# ===========================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/eva?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Stripe Payment Gateway
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Webhook Secret
# Get this when setting up webhooks at https://dashboard.stripe.com/webhooks
# For local development, use Stripe CLI: stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET="whsec_..."

# Cloudinary Image Upload
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Application URL (used for Stripe redirects and emails)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Sentry Error Monitoring
# Get your DSN from https://sentry.io/settings/projects/YOUR_PROJECT/keys/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# ZeptoMail Email Service
# Get these from https://zeptomail.zoho.com
ZEPTOMAIL_TOKEN=""
ZEPTOMAIL_FROM_EMAIL="noreply@evalocal.com"
ZEPTOMAIL_FROM_NAME="Eva Marketplace"
ZEPTOMAIL_SUPPORT_EMAIL="hello@evalocal.com"
